{
	"name": "dataflow_structured_data",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "salesdata",
						"type": "DatasetReference"
					},
					"name": "SalesDataSourceCSV",
					"description": "Import auto sales data from datalake storage"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "auto_sales_data_2020",
						"type": "DatasetReference"
					},
					"name": "AutoSalesData2020"
				},
				{
					"dataset": {
						"referenceName": "auto_sales_data_2019",
						"type": "DatasetReference"
					},
					"name": "AutoSalesData2019"
				},
				{
					"dataset": {
						"referenceName": "auto_sales_data_2018",
						"type": "DatasetReference"
					},
					"name": "AutoSalesData2018"
				}
			],
			"transformations": [
				{
					"name": "SortByOrderNumber"
				},
				{
					"name": "ConcatContactName"
				},
				{
					"name": "DeleteColumns"
				},
				{
					"name": "SalesData2018",
					"description": "Filtering rows using expressions on columns 'ORDERDATE' == 2018"
				},
				{
					"name": "SalesData2019",
					"description": "Filtering rows using expressions on columns 'ORDERDATE' == 2019"
				},
				{
					"name": "SalesData2020",
					"description": "Filtering rows using expressions on columns 'ORDERDATE' == 2020"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ORDERNUMBER as integer,",
				"          QUANTITYORDERED as integer,",
				"          PRICEEACH as double,",
				"          ORDERLINENUMBER as integer,",
				"          SALES as double,",
				"          ORDERDATE as date 'dd/MM/yyyy',",
				"          DAYS_SINCE_LASTORDER as integer,",
				"          STATUS as string,",
				"          PRODUCTLINE as string,",
				"          MSRP as integer,",
				"          PRODUCTCODE as string,",
				"          CUSTOMERNAME as string,",
				"          PHONE as string,",
				"          ADDRESSLINE1 as string,",
				"          CITY as string,",
				"          POSTALCODE as string,",
				"          COUNTRY as string,",
				"          CONTACTLASTNAME as string,",
				"          CONTACTFIRSTNAME as string,",
				"          DEALSIZE as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SalesDataSourceCSV",
				"SalesDataSourceCSV sort(asc(ORDERNUMBER, true)) ~> SortByOrderNumber",
				"SortByOrderNumber derive(CONTACTPERSON = concat(CONTACTFIRSTNAME, ' ', CONTACTLASTNAME)) ~> ConcatContactName",
				"ConcatContactName select(mapColumn(",
				"          ORDERNUMBER,",
				"          QUANTITYORDERED,",
				"          PRICEEACH,",
				"          ORDERLINENUMBER,",
				"          SALES,",
				"          ORDERDATE,",
				"          DAYS_SINCE_LASTORDER,",
				"          STATUS,",
				"          PRODUCTLINE,",
				"          MSRP,",
				"          PRODUCTCODE,",
				"          CUSTOMERNAME,",
				"          PHONE,",
				"          ADDRESSLINE1,",
				"          CITY,",
				"          POSTALCODE,",
				"          COUNTRY,",
				"          DEALSIZE,",
				"          CONTACTPERSON",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> DeleteColumns",
				"SalesData2019 filter(year(ORDERDATE) == 2018",
				"",
				") ~> SalesData2018",
				"SalesData2020 filter(year(ORDERDATE) == 2019",
				") ~> SalesData2019",
				"DeleteColumns filter(year(ORDERDATE) == 2020",
				") ~> SalesData2020",
				"SalesData2020 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> AutoSalesData2020",
				"SalesData2019 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> AutoSalesData2019",
				"SalesData2018 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> AutoSalesData2018"
			]
		}
	}
}